<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/image_trending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ivonne chair, green"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintLeft_toRightOf="@id/image_card"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/price_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$29.00"
        app:layout_constraintTop_toBottomOf="@id/name_trending"
        app:layout_constraintLeft_toLeftOf="@id/name_trending"/>

    <Button
        android:id="@+id/btn_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_trending"/>

</androidx.constraintlayout.widget.ConstraintLayout>